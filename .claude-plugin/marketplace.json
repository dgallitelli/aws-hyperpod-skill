{
  "name": "aws-hyperpod",
  "displayName": "Amazon SageMaker HyperPod",
  "version": "1.0.0",
  "description": "Expert guidance for provisioning and managing Amazon SageMaker HyperPod clusters for distributed ML training with EKS or Slurm orchestration",
  "author": "AWS Field Solutions Architecture",
  "license": "Apache-2.0",
  "keywords": [
    "aws",
    "sagemaker",
    "hyperpod",
    "ml",
    "distributed-training",
    "eks",
    "slurm",
    "gpu",
    "trainium"
  ],
  "mcpServers": {
    "sagemaker": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "awslabs.sagemaker-ai-mcp-server@latest",
        "--allow-write",
        "--allow-sensitive-data-access"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    }
  }
}
